<div class="row">
    <div class="col-md-12 col-lg mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">ایجاد کاربر جدید</h4>
            </div>
            <div class="box-body">
                <div class="row mbn-20">
                    <form action="/admin/users/store" method="POST">
                        <div class="col-lg-6 col-12 mb-20">
                            {{#if hasError}}
                                <div class="alert alert-outline-danger" role="alert">
                                    {{#each errors}}
                                        <p>{{this}}</p>
                                    {{/each}}
                                </div>
                            {{/if}}
                            <div class="row mbn-15">
                                <div class="col-12 mb-30">
                                    <input type="text" name="full_name" class="form-control" placeholder="نام کامل کاربر" />
                                </div>
                                <div class="col-12 mb-30">
                                    <input type="email" name="email" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-12 mb-30">
                                    <input type="password" name="password" class="form-control" placeholder="کلمه عبور" />
                                </div>
                                <div class="col-12 mb-30">
                                    <h6 class="mb-15">نقش کاربری</h6>
                                    <label><input type="radio" name="role" value="0" checked />کاربری</label>
                                    <label><input type="radio" name="role" value="1" />نویسنده</label>
                                    <label><input type="radio" name="role" value="2" />مدیر</label>
                                </div>
                                <div class="col-12 mb-30">
                                    <button type="submit" class="button button-primary"><span>ذخیره سازی</span></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--page title start-->
<section class="section-gap pb-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <section class="section-gap px-lg-5">
                    <div class="hero-img bg-overlay rounded overflow-hidden" data-overlay="2"
                        style="background-image: url(/static/assets/img/blog/b1.jpg);"></div>
                    <div class="container">
                        <div class="row align-items-center text-white">
                            <div class="col-md-8">
                                <h3 class="">کلید آلیشیا در سفرهای طولانی زندگی در مصر است</h3>
                                <div class="meta font-lora my-4 text-white">
                                    <a href="#">مسافرت</a>
                                    <span class="meta-separator"></span>
                                    <a href="#">1398 فروردین</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<!--page title end-->
<section class="section-gap pb-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="blog-post border-0 blog-single">
                    <p>
                        {{{post.content}}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--blog start-->

<hr />
<div class="component-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-3 text-md-center">
                        <img class="avatar-lg rounded-circle mb-3 d-inline-block" src="/static/assets/img/team/t-3.jpg"
                            alt="توماس جانسون">
                    </div>
                    <div class="col-md-9">
                        <h5 class="font-lora font-weight-normal mb-4">{{post.author.description}}</h5>
                        <div class="border-left mb-3"> &nbsp;</div>
                        <strong class="text-primary">{{post.author.full_name}}</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
<section class="section-gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!--comments area start-->
                <div class="comments">
                    <h2 class="comments-title"> نظرات</h2>
                    {{>comments/list comments=this.comments}}
                </div>
                <!--comments area end-->
                <!--comment form start-->
                <div class="comment-respond">
                    <h3 class="comment-reply-title mb-lg-5 mb-4">
                        پیام بگذارید
                    </h3>
                    <form role="form" class="comment-form" action="/p/{{post.slug}}/comments" method="POST">
                        <div class="row">
                            <div class=" col-md-4">
                                <div class="form-group">
                                    <input type="text" name="user_name" class="form-control" placeholder="نام*"
                                        required="">
                                </div>
                            </div>
                            <div class=" col-md-4">
                                <div class="form-group ">
                                    <input type="email" name="user_email" class="form-control" placeholder="ایمیل*">
                                </div>
                            </div>
                            <div class=" col-md-4">
                                <div class="form-group ">
                                    <input type="text" name="user_url" class="form-control" placeholder="وب سایت">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls">
                                <textarea id="message" name="user_comment" rows="5" placeholder="نظر*"
                                    class="form-control" required=""></textarea>
                            </div>
                        </div>
                        <p class="text-muted">آدرس ایمیل شما منتشر نخواهد شد. فیلدهای مورد نیاز علامت گذاری شده اند *
                        </p>
                        <div class="text-center mt-md-5">
                            <button type="submit" class="btn btn-theme">ارسال</button>
                        </div>
                    </form>
                </div>
                <!--comment form end-->
            </div>
        </div>
    </div>
</section>

<!--blog end-->